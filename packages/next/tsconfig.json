{
    "include": ["src"],
    "compilerOptions": {
        "declaration": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "target": "es2018",
        "module": "es2022",
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true
    },
}